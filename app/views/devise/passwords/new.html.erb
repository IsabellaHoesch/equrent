<div class="container container-form form-border">
  <div id="upload" class="d-flex justify-content-between align-items-center mb-1">
    <h2>Forgot your password?</h2>
  </div>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Reset password", class: 'btn btn-light p-2 mb-2 text-muted border' %>
    </div>
  <% end %>
  <div class="form-actions p-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
