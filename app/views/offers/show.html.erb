 <div class="container">
  <% if @offer.photo.attached? %>
  <div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @offer.photo.key, crop: :fill %>');">
    <h2><%= @offer.name %></h2>
  </div>
  <% else %>
  <div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path 'sports_img.jpg', crop: :fill %>');">
    <h2><%= @offer.name %></h2>
  </div>
  <% end %>
</div>

<div class= "container">
  
  <div class="card mt-3">
    <div class="card-body d-flex justify-content-between">
      <h5><strong>Price: </strong><%= @offer.price %> â‚¬/ per hour</h5>
      <p><%=@offer.address %></p>
    </div>
  </div>

  <div id="show-btn">
    <div> 
      <%= link_to 'All offers', offers_path, class: 'btn btn-primary' %>
      <%= link_to "Create an offer", new_offer_path, class: 'btn btn-primary' %>
      <%= link_to "Edit the offer", edit_offer_path, class: 'btn btn-primary' %>
      <%= link_to 'Book', new_offer_booking_path(@offer), class: 'btn btn-primary' %>
      <%= link_to "Delete #{@offer.name}",
            offer_path(@offer),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: 'btn btn-primary' %>
    </div>
  </div>
    
  <div id="offers-title">
    <h3>>>> <%= @offer.description %></h3>
    <p><u>Contact <%=@offer.user.name %></u></p>
  </div>

  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>




