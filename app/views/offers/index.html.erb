<div class= "container">  

  <div>
    <h1>Offers</h1>
    <p>Lorem ipsum dolor, sit, amet consectetur adipisicing elit. Exercitationem, sunt, repellat. Quam mollitia blanditiis, iste et suscipit doloremque officiis id aliquid aut quidem sit laudantium accusantium totam recusandae, est nemo!</p>
  </div>


  <div class="main-container">
    <div class="cards">
      <% @offers.each do |offer| %>
        <div class="card">
          <img src="<%= offer.offer_img %>">
          <div class="card-product-infos">
            <h3><%= link_to offer.name, offer_path(offer) %></h3>
            <p><%= offer.sport_type %></p>
            <p><%= offer.description %></p>
          </div>
        </div>
      <% end %>
    </div>

    <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

</div>
<%= link_to "Create an offer", new_offer_path %>

